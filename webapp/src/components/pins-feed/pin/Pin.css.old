.pin {
  width: 240px;
  display: inline-block;
  border-radius: 10px;
  padding: 10px;
  cursor: zoom-in; }

.pin img {
  width: 100%;
  object-fit: cover;
  object-position: 0 0;
  border-radius: inherit;
  max-height: 500px; }

.pin .options-wrapper {
  display: flex;
  justify-content: space-between;
  position: relative;
  font-size: 14px;
  font-weight: 700; }

.pin:hover {
  background-color: #F2F2F2;
  mask-image: linear-gradient(135deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.8) 1%, rgba(0, 0, 0, 0.8) 100%); }

.pin:hover .link-btn, .pin:hover .select-menu-header {
  display: flex; }

.pin .link-btn {
  position: absolute;
  bottom: 49px;
  left: 8px;
  background: #EFEFEF;
  border-radius: 5px;
  display: none; }

.pin .link-btn span {
  font-size: 13px; }
